<?xml version="1.0" encoding="UTF-8"?>
<ehcache name="cache" >
    <!-- 磁盘缓存位置 -->
    <diskStore path="java.io.tmpdir"/>

    <!--默认缓存-->
    <defaultCache
            maxEntriesLocalHeap="1000"
            eternal="false"
            timeToIdleSeconds="100"
            timeToLiveSeconds="100"
            overflowToDisk="false">
    </defaultCache>

    <!-- 登录记录缓存 锁定10分钟 -->
<!--    maxEntriesLocalHeap ：最多在本地对内存中保存多少个对象
    eternal ：true:对象永远不会过期  fasle:对象会过期
    timeToIdleSeconds：不活跃的对象最多存活多少秒
    timeToLiveSeconds：对象存活多少秒；即设置的缓存时间
    overflowToDisk：内存对象达到峰值是否序列化到硬盘上
    statistics：没查到该属性的意思-->
    <cache name="cacheTest"
           maxEntriesLocalHeap="2000"
           eternal="false"
           timeToIdleSeconds="5"
           timeToLiveSeconds="5"
           overflowToDisk="false"
           statistics="true">
    </cache>


</ehcache>